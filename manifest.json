{
    "manifest_version": 2,

    "name": "Shut up! Just connect me...",
    "description": "Restez connect√© en permanence au Wifi de Sciences-U.",

    "version": "0.1.0",
    "author": "Johann Pardanaud",

    "icons": {
        "16": "assets/icons/icon-16.png",
        "48": "assets/icons/icon-48.png",
        "128": "assets/icons/icon-128.png"
    },

    "permissions": [
        "http://*/*",
        "https://*/*",

        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking"
    ],

    "background": {
        "scripts": ["scripts/background.js"]
    },

    "browser_action": {
        "default_icon": {
            "19": "assets/icons/icon-19.png",
            "38": "assets/icons/icon-38.png"
        },

        "default_title": "Shut up! Just connect me...",
        "default_popup": "templates/popup.html"
    }
}